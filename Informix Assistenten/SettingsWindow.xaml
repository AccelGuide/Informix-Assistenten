<Window x:Class="Informix_Assistenten.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av"
        Title="Einstellungen"
        Height="451" Width="420"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        FontFamily="JetBrains Mono">

    <Border CornerRadius="15"
            BorderBrush="#80b6f2"
            BorderThickness="2"
            Background="White"
            SnapsToDevicePixels="True"
            ClipToBounds="True">

        <Grid Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Fensterleiste -->
            <Grid Grid.Row="0" Background="#f5f9ff" Margin="20,0,20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Einstellungen"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           FontWeight="Bold"
                           Foreground="#3178c6"/>

                <Button Grid.Column="1" Content="—"
                        Width="30" Height="30"
                        FontWeight="Bold"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#3178c6"
                        ToolTip="Minimieren"
                        Click="Minimize_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#3178c6"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#d0e2f2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="2" Content="✕"
                        Width="30" Height="30"
                        FontWeight="Bold"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#c62828"
                        ToolTip="Schließen"
                        Click="Close_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#c62828"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#ffcdd2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Inhalt -->
            <StackPanel Grid.Row="1" Margin="20,10,20,9">
                <CheckBox x:Name="chkTestmode"
                          Content="Testmodus beim Start aktivieren"
                          Margin="0,5"/>

                <CheckBox x:Name="chkLogAutoSave"
                          Content="Fehlerprotokolle automatisch speichern"
                          Margin="0,5"/>

                <TextBlock Text="Editor für 4GL Programme:" Margin="0,20,0,5" Foreground="#3178c6"/>
                <ComboBox x:Name="cmbEditor" SelectionChanged="cmbEditor_SelectionChanged" Margin="0,0,0,10">
                    <ComboBoxItem Content="Notepad" IsSelected="True"/>
                    <ComboBoxItem Content="Notepad++"/>
                    <ComboBoxItem Content="Visual Studio Code"/>
                    <ComboBoxItem Content="Andere"/>
                </ComboBox>

                <TextBox x:Name="txtEditorPath" Margin="0,0,0,10" Background="#f5f9ff" BorderBrush="#80b6f2" BorderThickness="1" Padding="5" IsReadOnly="True"/>
                <Button Content="Pfad wählen" Click="BtnChoosePath_Click" Width="120" HorizontalAlignment="Left" Margin="0,0,0,15"/>

                <TextBlock TextWrapping="Wrap" Text="Informix Ports (für Scan):" Foreground="#3178c6"/>
                <ListBox x:Name="lstPorts" Height="47" Background="#f5f9ff" BorderBrush="#80b6f2" BorderThickness="1" av:ItemsSource="{av:SampleData ItemCount=5}"/>
                <StackPanel Height="73">
                    <TextBox x:Name="txtNewPort" Width="100" Margin="0,5" Text="txtNewPort"/>
                    <Button Content="Hinzufügen" Width="90" Click="BtnAddPort_Click">
                        <Button.Foreground>
                            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionTextColorKey}}"/>
                        </Button.Foreground>
                        <Button.BorderBrush>
                            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.HighlightColorKey}}"/>
                        </Button.BorderBrush>
                    </Button>
                    <Button Content="Entfernen" Width="90" Click="BtnRemovePort_Click"/>
                </StackPanel>


                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Speichern"
                            Width="90"
                            Background="#3178c6"
                            Foreground="White"
                            Padding="5,2"
                            BorderThickness="0"
                            Click="BtnSpeichern_Click"
                            Margin="0,0,10,0"/>
                    
                    <Button Content="Abbrechen"
                            Width="90"
                            Background="#cccccc"
                            Foreground="Black"
                            Padding="5,2"
                            BorderThickness="0"
                            Click="BtnAbbrechen_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
